{
  "private": true,
  "scripts": {
    "anvil": "anvil --fork-url $ANVIL_FORK_URL --fork-block-number 16966590",
    "build": "pnpm --filter '@plg-wagmi/chains' build && pnpm --filter '@plg-wagmi/core' build && pnpm -r --filter './packages/**' --filter './references/**' --filter '!./packages/core' --filter '!./references/**/chains' build",
    "changeset:release": "pnpm build && changeset publish",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "cjs:release": "node -r esbuild-register ./scripts/cjs.ts",
    "dev": "pnpm --filter '@plg-wagmi/chains' build && pnpm -r --filter './packages/**' --filter './references/**' --filter '!./references/**/chains' dev",
    "docs:build": "pnpm -r --filter './packages/**' --filter './references/packages/**' --filter docs build",
    "docs:dev": "pnpm dev && pnpm --filter docs dev",
    "format": "rome format . --write",
    "lint": "rome check .",
    "lint:fix": "pnpm lint --apply",
    "playground": "pnpm dev && pnpm --filter example-dev dev",
    "preinstall": "pnpm i --no-frozen-lockfile --filter './references/packages/**' --ignore-scripts && npx only-allow pnpm",
    "postinstall": "pnpm dev",
    "prepare": "npx simple-git-hooks",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run",
    "test:typecheck": "vitest typecheck",
    "test:ui": "vitest --ui",
    "test:update": "vitest --update",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.6",
    "@changesets/cli": "2.25.2",
    "@manypkg/get-packages": "^1.1.3",
    "@types/dedent": "^0.7.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "17.0.21",
    "@types/prettier": "^2.7.2",
    "@vitest/coverage-c8": "^0.31.1",
    "@vitest/ui": "^0.31.1",
    "abitype": "^0.8.7",
    "dedent": "^0.7.0",
    "esbuild": "0.15.13",
    "esbuild-register": "^3.4.2",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.1.0",
    "msw": "^1.2.1",
    "prettier": "^2.8.3",
    "rome": "^12.1.2",
    "simple-git-hooks": "^2.8.1",
    "tsup": "^6.5.0",
    "typescript": "^5.0.4",
    "viem": "~0.3.35",
    "vite": "^4.0.4",
    "vitest": "^0.31.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm format && pnpm lint:fix"
  },
  "packageManager": "pnpm@8.3.1",
  "pnpm": {
    "overrides": {
      "abitype": "0.8.7",
      "esbuild": "0.15.13"
    }
  }
}
